package otherParts;

import java.util.Map;

import javax.faces.application.FacesMessage;
import javax.faces.bean.ManagedBean;
import javax.faces.context.FacesContext;
 
import org.primefaces.event.RateEvent;
 
@ManagedBean
public class RatingView {  
     
    private Integer rating3;
    
    private String game1;        
    
	public void onrate(RateEvent rateEvent,String game) {
		game1 = game;
		game1 = (String)rateEvent.getComponent().getAttributes().get("action");
		FacesMessage message = new FacesMessage(FacesMessage.SEVERITY_INFO, "Rate Event", "You rated:" + ((Integer) rateEvent.getRating()).intValue());
        FacesContext.getCurrentInstance().addMessage(null, message);
        System.out.println("Rate:"+((Integer) rateEvent.getRating()).intValue()+"Game:"+game1+"");
        
	}
	
	public void game(String game){
		System.out.println(game);
	}
     
    public void oncancel() {
        FacesMessage message = new FacesMessage(FacesMessage.SEVERITY_INFO, "Cancel Event", "Rate Reset");
        FacesContext.getCurrentInstance().addMessage(null, message);
    }    
 
    public Integer getRating3() {
        return rating3;
    }
 
    public void setRating3(Integer rating3) {
        this.rating3 = rating3;
    }
    
//    public String getGame() {
//		return game;
//	}
//
//	public void setGame(String game) {
//		this.game = game;
//	}

}